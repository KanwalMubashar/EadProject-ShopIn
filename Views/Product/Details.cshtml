
@{
    ViewBag.Title = "Details2";
}
@model EadProject.Models.Product
<br />
<hr />
<div class="container">
    <div class="row">
        <h2>ADD TO CART</h2>

    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-primary ">
                <div class="panel-heading">Item 1</div>
                <div class="panel-body "><img src="/Images/men1.jpg" class="img-responsive " style="margin: 0 auto;" width="170" height="100" alt="Image"></div>
                <div class="panel-footer pfooter" style="color:#000000 ">parka's lightweight jacket </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-3">
            <ul>


                <li><h5><b><u style="color:green; font-size: 20px ">Price :</u>&nbsp<pre style="background-color:black; border:#000000 ; color:red ; font-size: 18px !important"><del>  Rs2000 </del>  Rs.1500 </pre></b></h5></li>
                <li>
                    <h5><b style=" font-size: 18px ">Select Your Size</b></h5>
                    <select name="size" id="size">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="x-large">X-Large</option>
                    </select>
                </li>
                <li>
                    <h5><b style=" font-size: 18px ">Quantity</b></h5>
                    <select name="size" id="size">
                        <option value="one">1</option>
                        <option value="two">2</option>
                        <option value="three">3</option>
                        <option value="four">4</option>
                        <option value="five">5</option>
                    </select>
                    <hr />
                    <button type="button" class="btn btn-danger" style="background-color:red "><b>Add To Cart</b></button>
                </li>
            </ul>

        </div>
    </div>
</div>
<br />
<hr />
<div class="row">
    <link href="/Content/js-image-slider.css" rel="stylesheet" type="text/css" />
    <div id="foobar">
        <footer>
            <ul>
                <li>&copy; <b>@DateTime.Now.Year - ShopIn </b></li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("Refund & Exchange", "RefundAndExchange", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("ShippingInfo", "ShippingInfo", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("Privacy Policy", "ContactUs", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </footer>
    </div>
</div>
